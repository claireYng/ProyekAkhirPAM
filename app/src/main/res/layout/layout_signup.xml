<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FAFF"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="158.55dp"
        android:layout_height="36.86dp"
        android:id="@+id/logoteks"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teksSignup1"
        android:text="Buat Akun"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="@font/xtr"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/logoteks"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teksSignup2"
        android:text="Mulai pengalaman belajarmu di sini!"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/teksSignup1"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutEt"
        app:layout_constraintTop_toBottomOf="@id/teksSignup2"
        android:layout_marginTop="60dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#EFF8FF"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/blue">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/etName"
                android:inputType="textPersonName"
                android:hint="Full Name"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:boxBackgroundColor="#EFF8FF"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/blue">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/etEmail2"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:boxBackgroundColor="#EFF8FF"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/blue"
            app:passwordToggleEnabled="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/etPw2"
                android:text="Password"
                android:inputType="textPassword"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:background="@drawable/bg_btn"
        android:id="@+id/btnDaftar"
        app:layout_constraintTop_toBottomOf="@id/layoutEt"
        android:layout_marginTop="60dp"
        android:textSize="16dp"
        android:elevation="4.37dp"
        android:textColor="@color/white"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnggl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/goglebtn"
        android:drawableLeft="@drawable/bgggl"
        android:drawablePadding="10dp"
        android:text="Google"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnDaftar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/teksMasuk2"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah mempunyai akun?"

            android:textSize="16dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:id="@+id/tvLogin"
            android:fontFamily="@font/xtr"
            android:textSize="16dp"
            android:textColor="#0066DD"
            android:layout_marginLeft="7dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>